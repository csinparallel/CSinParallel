    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "java",
            "args": [
                "-jar",
                "../lib/Pyjama.jar",
                "${file}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [],
            "options": {
                "cwd": "${fileDirname}"
            }
        }
    ]
}